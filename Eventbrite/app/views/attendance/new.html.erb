<h1>Attendance#new</h1>
<p>Find me in app/views/attendance/new.html.erb</p>

<div class="container">
    <div class="text-center">
        <% if current_user %>
            <%= form_tag url: {action: "create"} do %>
                <article>
                    <% if flash[:error].present? %>
                    <div id="error_explanation">
                        <p><%= flash[:error] %></p>
                    </div>
                    <% end %>
                    <label class="amount">
                    <p>Veuillez payez le montant de: <%= @event.price.to_f / 100  %>euro pour l'inscription</p>
                    </label>
                </article>

                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                        data-description="Te voila inscrit"
                        data-amount=<%= @event.price %>
                        data-currency= "eur"
                        data-locale="auto">
                </script>
            <% end %>
        <% else %>
                <%= render :file =>"devise/registrations/new"%>
        <% end %>
  </div><!-- text-center-->
</div><!-- container -->
